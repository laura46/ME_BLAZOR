<div class="@Class">@Content</div>

@code {
    [Parameter]
    public string Content { get; set; }
    [Parameter]
    public HEADER_TYPES Type { get; set; }

    public string Class { get; set; }

    protected override void OnInitialized()
    {
        switch (Type) {
            case HEADER_TYPES.SMALL:
                Class = "header sm";
                break;
            case HEADER_TYPES.MEDIUM:
                Class = "header md";
                break;
            case HEADER_TYPES.LARGE:
                Class = "header lg";
                break;
        }
        base.OnInitialized();
    }

    public enum HEADER_TYPES {
        SMALL,
        MEDIUM,
        LARGE
    };
}
